<main class="m-5">

    <header>
        <div class="card mb-5">
            <div class="row g-3">
                {{#with navigation}}
                {{#each links}}
                <div class="col-2">
                    <div class="nav">
                        <div class="nav-item">
                            <a href="{{href}}" class="nav-link {{#if @last}} disabled {{/if}}">{{text}}</a>
                        </div>
                    </div>
                </div>
                {{/each}}
                {{/with}}
            </div>
        </div>


        <h1>{{header}}</h1>

    </header>

    <section class="mt-5">

        <div class="row">
            <div class="col-6">
                {{#with contacts_data}}
                <h4>{{title}}</h4>
                {{#each buttons}}
                <div class="{{#if isPrimary}}btn btn-warning{{/if}} {{#if isOutline}} btn btn-outline-warning{{/if}}">
                    {{text}}
                </div>
                {{/each}}

                {{#with form}}
                {{#with input}}
                <div class="row">
                    <div class="col-4">
                        {{#with surname}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text text-danger">{{caption}}</div>
                        {{/with}}
                    </div>

                    <div class="col-4">
                        {{#with name}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text text-danger">{{caption}}</div>
                        {{/with}}
                    </div>

                </div>

                <div class="col-4">
                    <div class="card pt-3 ps-2 mb-2">
                        {{#each ../../../action_block}}


                        <span
                            class="{{#if isSuccess}}btn btn-success{{/if}}{{#if isDanger}}btn btn-danger{{/if}}{{#if isInfo}}btn btn-info{{/if}} mb-2">
                            {{text}}
                        </span>


                        {{/each}}
                    </div>
                </div>
                {{#with ../../../total}}

                <div class="col-4">
                    <div class="card pt-3 ps-2">
                        <div class="col-8">
                            <h3>{{title}}</h3>
                            {{#each item_list}}
                            {{name}}:
                            {{price}}
                            <br>
                            {{/each}}
                            <hr>
                            {{#each additional_info}}
                            {{text}}: {{value}}
                            <br>
                            {{/each}}
                            <hr>
                            {{#with total_price}}
                            {{text}}: {{value}}
                            {{/with}}
                        </div>
                        <hr>
                        <div>
                            {{#each button}}
                            <span
                                class="{{#if isPrimary}}btn btn-primary {{/if}} mb-2 {{#if isOutline}} btn btn-outline-primary{{/if}}">

                                {{text}}
                            </span>
                            {{/each}}
                        </div>
                    </div>
                </div>

                {{/with}}

            </div>


            <div class="row">
                <div class="col-4">
                    {{#with phone}}
                    <label class="form-label">{{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text text-danger">{{caption}}</div>
                    {{/with}}
                </div>
                <div class="col-4">
                    {{#with email}}
                    <label class="form-label">{{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text text-danger">{{caption}}</div>
                    {{/with}}
                </div>
            </div>
            <hr class="col-8 mt-3">
            {{#with ../../form}}
            {{#each switch}}

            <div class="form-check form-switch mt-3">
                <label class="form-check-label">{{text}}</label>
                <input type="checkbox" class="form-check-input" {{#if isActive}}checked{{/if}}>
            </div>


            {{/each}}
            {{/with}}

            {{/with}}
            {{/with}}
            {{/with}}
            <hr class="col-8 mt-5">


            <div class="row">
                {{#with delivery}}
                <h2>{{title}}</h2>
                <div class="card col-8">
                    <div class="row">
                        {{#each select}}
                        <div class="col-6">
                            <label class="form-label">{{label}}</label>
                            <select class="form-select">
                                <option> {{placeholder}}</option>
                                {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                                {{/each}}
                            </select>
                        </div>
                        {{/each}}
                    </div>
                </div>
                {{#each delivery_type}}
                <div class="form-check mt-4">
                    <label class="form-check-label">{{type}}</label>
                    <input name="delivery" type="radio" class="form-check-input">
                </div>

                {{/each}}

                <hr class="m-3">
                {{#with payment}}
                <h2>{{title}}</h2>

                {{#each list}}
                <div class="form-check mt-4">
                    <label class="form-check-label">{{type}}</label>
                    <input name="delivery" type="radio" class="form-check-input">
                </div>
                <div class="mt-3">{{description}}</div>
                {{/each}}
                {{/with}}
                <hr class="m-3">
                {{#with contact}}
                <h2>{{title}}</h2>

                <div class="row">

                    {{#with surname}}
                    <div class="col-4">
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text text-danger">{{caption}}</div>
                    </div>
                    {{/with}}
                    {{#with name}}
                    <div class="col-4">
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text text-danger">{{caption}}</div>
                    </div>
                    {{/with}}



                    <div class="row">

                        {{#with phone}}
                        <div class="col-4">
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text text-danger">{{caption}}</div>
                        </div>
                        {{/with}}
                        {{#with email}}
                        <div class="col-4">
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text text-danger">{{caption}}</div>
                        </div>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
                <hr class="m-3">
                {{#with coment}}
                <div class="col-5">
                    <label class="form-label">{{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    {{/with}}
                    {{/with}}
                </div>
            </div>

            <hr class="mt-3">
            {{#with coupon}}
            <h2>{{title}}</h2>
            {{#with select}}
            {{#with availabel_coupon}}

            <div class="col-8 mt-3">
                <label class="form-label">{{label}}</label>
                <select class="form-select">
                    <option> {{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            </div>

            {{/with}}
            {{#with friend_coupon}}

            <div class="col-8 mt-3">
                <label class="form-label">{{label}}</label>
                <select class="form-select">
                    <option> {{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            </div>

            {{/with}}
            {{/with}}
            {{#with add}}
            {{#with friend}}
            <div class="col-8 mt-3">
                <label class="form-label">{{label}}</label>
                <input class="form-control" placeholder="{{placeholder}}">
                <div class="form-text text-dark">{{caption}}</div>
            </div>
            {{/with}}
            {{#with colleague}}
            <div class="col-8 mt-3">
                <label class="form-label">{{label}}</label>
                <input class="form-control" placeholder="{{placeholder}}">
                <div class="form-text text-dark">{{caption}}</div>
            </div>

            {{/with}}
            {{/with}}
            {{/with}}

            <hr class="mt-3">
            {{#with quiz}}
            <h2>{{title}}</h2>
            {{#with preference}}
            <div class="mt-3">{{title}}</div>
            {{#each options}}
            <div class="form-check mt-4">
                <label class="form-check-label">{{this}}</label>
                <input name="delivery" type="radio" class="form-check-input">
            </div>
            {{/each}}
            {{/with}}
            {{#with your_expirience}}
            <div class="col-8 mt-3">
                <label class="form-label">{{label}}</label>
                <input class="form-control">
            </div>
            {{/with}}
            {{#with purchase_frequency}}
            <div class="col-8 mt-3">
                <label class="form-label">{{label}}</label>
                <select class="form-select">
                    <option> {{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            </div>
            {{/with}}
            {{#with factors}}
            <div class="form-label mt-3">{{title}}</div>
            {{#each options}}
            <div class="form-check">
                <label class="form-check-label">{{this}}</label>
                <input name="food" type="checkbox" class="form-check-input">
            </div>
            {{/each}}

            {{/with}}
            {{/with}}
            <hr class="mt-3">
            <footer>
                <div class="nav">
                    {{#each footer}}
                    <div class="col-2">
                        {{#each this}}
                        <div class="nav-item">
                            <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{link}}">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                    {{/each}}
                </div>

            </footer>

    </section>

</main>