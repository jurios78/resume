<main class="m-5">

    <header>
        <div class="row g-3">
            {{#with navigation}}
            {{#each links}}
            <div class="col-3">
                <div class="nav">
                    <div class="nav-item">
                        <a href="{{href}}" class="nav-link {{#if @last}} disabled {{/if}}">{{text}}</a>
                    </div>
                </div>
            </div>
            {{/each}}
            {{/with}}
        </div>
        <hr>
    </header>
    <section class="mt-5">
        {{#with header}}
        <h3>{{title}}</h3>
        {{#with button}}
        <a href="{{link}}" class="btn btn-outline-secondary mt-3">{{text}}</a>
        {{/with}}
        {{/with}}
    </section>
    <hr class="mt-5 mb-5">
    <section>
        {{> cartGoodsItem}}
    </section>
    <hr class="mt-5 mb-5">
    <section>
        {{#with total}}
        <h3>{{title}}</h3>
        <h1>{{amount}}</h1>
        <div class="mb-3">{{delivery}}</div>
        {{#each buttons}}
        <div>
            <a href="{{link}}"
                class="{{#if isSuccess}}btn btn-success{{/if}} {{#if isOutline}}btn btn-outline-success{{/if}} mb-2">
                {{text}}
            </a>
        </div>
        {{/each}}
        {{/with}}
    </section>
    <hr class="mt-5 mb-5">
    <section>
        {{#with goodsOtherBlock}}
        <h2 class="text-center">{{title}}</h2>
        <div class="row g-4 mt-3">
            {{#each cards}}
            <div class="col-4">
                <div class="card">
                    <img class="card-img-top" src={{image}} alt={{title}}>


                    <div class="card-body">
                        <h5 class="card-title ">{{title}}</h5>
                        <span class="badge text-bg-warning rounded-pill">{{#if isHot}}Hot{{/if}}</span>
                        <span class="badge text-bg-primary rounded-pill">{{#if isNew}}New{{/if}}</span>

                        <p>{{description}}</p>
                    </div>
                </div>
            </div>

            {{/each}}
        </div>
        {{/with}}
    </section>
    <hr class="mt-5 mb-5">
    <section>
        <div class="card text-bg-dark">
            {{#with subscribe}}
            <h2>{{header}}</h2>
            <p>{{description}}</p>
            {{#each buttons}}
            <div>
                <a href="{{link}}" class="btn btn-primary m-2">{{text}}
                </a>
            </div>
            {{/each}}
            {{/with}}
        </div>
    </section>
    <hr class="mt-5 mb-5">
    <footer>
        <div class="nav">
            {{#each footer}}
            <div class="col-2">
                {{#each this}}
                <div class="nav-item">
                    <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{link}}">{{text}}</a>
                </div>
                {{/each}}
            </div>
            {{/each}}
        </div>
    </footer>
</main>