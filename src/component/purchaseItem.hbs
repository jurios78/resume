{{#each itemList}}
<div class="row">
    <div class="col-4">

        {{number}}
        <br>
        <b>{{status}}</b>
    </div>
    <div class="col-2">
        {{#with amount}}
        {{title}}
        <br>
        <b>{{value}}</b>
        {{/with}}
    </div>

    <div class="col-4">
        {{#each images}}
        <img src="{{this}}">
        {{/each}}
    </div>
    {{#with button}}
    <div class="col-2">
        <a href="{{link}}" class="btn {{#if isPrimary}}btn-primary{{/if}}">{{text}}</a>
    </div>
    {{/with}}
    <hr class="mt-2">

</div>

{{/each}}