<div class="card p-3">
    {{#each reviewList}}
    {{#with title}}
      <div class="card m-3 ">
      <div class="ps-3">
        <h6>{{userName}}</h6>
        {{caption}}
        <br>
        {{date}}
        <hr>
                
      {{/with}}
      {{#with reviewBody}}
      {{#with seller}}
      {{title}}:
      {{value}}
      {{/with}}
      <br>
      {{#with rating}}
      {{title}}
      {{value}}
      {{/with}}
      <div class="mt-3">
      {{#each text}}
      {{this}}
      {{/each}}
    </div>
    <div>
      {{#with advantages}}
      <b>{{title}}:</b>
      <br>
      {{text}}
      {{/with}}
    </div>
    <div>
      {{#with disadvantages}}
      <b>{{title}}:</b>
      <br>
      {{text}}
      {{/with}}
    </div>
    <div>
      {{#each images}}
      <img class="card-body" src="{{this}}" alt="Product photo">
      {{/each}}
    </div>
    {{#each coments}}
    <div class="card m-4 p-2">
      <h5>{{userName}}</h5>
      <div>
      {{date}}
    </div>
    <div>
      {{text}}
    </div>
    </div>
    {{/each}}
      {{/with}}
    </div>
  </div>
    {{/each}}
  </div>